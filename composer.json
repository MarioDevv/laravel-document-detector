{
  "name": "mariodevv/laravel-document-detector",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "MarioDevv",
      "email": "perezmario.info@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "MarioDevv\\LaravelDocumentDetector\\": "src/",
      "MarioDevv\\LaravelDocumentDetector\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-imagick": "*",
    "illuminate/support": "^12.0",
    "intervention/image": "^3.11",
    "openai-php/client": "^0.13.0",
    "ext-curl": "*",
    "symfony/http-client": "^7.2",
    "nyholm/psr7": "^1.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "vlucas/phpdotenv": "^5.6"
  },
  "scripts": {
    "tests": "vendor/bin/phpunit tests"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
