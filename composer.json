{
  "name": "mario/laravel-document-detector",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "MarioDevv",
      "email": "perezmario.info@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "MarioDevv\\LaravelDocumentDetector\\": "src/",
      "MarioDevv\\LaravelDocumentDetector\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2",
    "ext-imagick": "*",
    "illuminate/support": "^12.0",
    "intervention/image": "^3.11",
    "google/cloud-vision": "^2.0",
    "google/cloud-document-ai": "^2.2",
    "phpoption/phpoption": "^1.9",
    "patrickschur/language-detection": "^5.3",
    "openai-php/client": "^0.13.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "vlucas/phpdotenv": "^5.6"
  },
  "scripts": {
    "tests": "vendor/bin/phpunit tests"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
